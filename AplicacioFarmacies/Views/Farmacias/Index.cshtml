@model IEnumerable<AplicacioFarmacies.Models.Farmacia>

@{
    ViewBag.Title = "Farmàcies";
}

<h2>Farmàcies</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodiFarmacia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomFarmacia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipusVia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carrer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroVia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroTelefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaBasicaSalut)
        </th>
        <th>
            Visualitzar
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodiFarmacia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomFarmacia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipusVia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Carrer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroVia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroTelefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AreaBasicaSalut)
        </td>
        <td>
            @Html.ActionLink("Veure", "Details", new { id = item.IdFarmacia })
        </td>
    </tr>
}

</table>
